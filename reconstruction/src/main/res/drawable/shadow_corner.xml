<?xml version="1.0" encoding="utf-8"?>  
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >  
        <!-- layout background -->  
        <item>  
            <!-- show rectangle area -->  
            <shape android:shape="rectangle" >  
                <gradient  
                    android:angle="270"  
                    android:startColor="#f2f2f2"  
                    android:centerColor="#000000"  
                    android:endColor="#f2f2f2"
                    />
                               
                <corners 
                    android:radius="5dip"
                    />  
            </shape>  
        </item>  
        <!-- layout foreground -->  
        <item  
            android:bottom="20px"  
            android:top="10px">  
            <!-- show rectangle area -->  
            <shape android:shape="rectangle" >  
				<solid
				    android:color="#ffffff"   
				    ></solid>
                <corners
                    android:radius="5dip"/>
            </shape>  
        </item>  
    </layer-list>  
