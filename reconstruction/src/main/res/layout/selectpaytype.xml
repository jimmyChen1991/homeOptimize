<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2">
    <RelativeLayout
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbarheight"
            android:layout_alignParentTop="true"
            android:background="@drawable/topshdowbar">
        <ImageButton
                android:id="@+id/button_scan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"/>
        <TextView
                android:id="@+id/textview_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="选择支付方式"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:textSize="21sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/toolbar1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff">
        <TextView
                android:id="@+id/textview_title_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:layout_alignParentLeft="true"
                android:text="订单提交成功,请尽快付款!订单号:12216549442"
                android:textColor="#c28d56"
                android:layout_marginLeft="15dp"
                android:textSize="21sp"/>
        <TextView
                android:id="@+id/order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textview_title_success"
                android:text="请于45分钟内完成支付,否则订单将自动取消"
                android:textColor="#999999"
                android:textSize="17sp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/valueLayout2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dip"
            android:background="#ffffff">

        <TextView
                android:id="@+id/textview_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式"
                android:textColor="#c28d56"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:textSize="21sp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_pay_money"
                android:text="支付金额:￥6500.00"
                android:textColor="#c28d56"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp"
                android:textSize="21sp"
                android:layout_alignParentRight="true"
                />

        <ImageView
                android:id="@+id/button_scan3"
                android:layout_below="@+id/textview_title2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dip"
                android:background="#e5e5e5"/>

        <ListView
                android:id="@+id/listView"
                android:layout_below="@+id/textview_title2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:dividerHeight="1dip"
                android:divider="#e5e5e5"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="16dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/bottom_bar3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/hejiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:layout_marginLeft="120dp"
                android:textSize="15sp"
                android:text="支付成功后,最快45分钟后提货,请确认您有足够的时间等待提货"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@null"/>
    </RelativeLayout>
</RelativeLayout>