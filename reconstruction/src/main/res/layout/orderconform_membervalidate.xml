<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginTop="12dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:paddingBottom="20dip"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/toolbarmeber1"
            android:layout_below="@+id/toolbar19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/prpmptmebere1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="16dip"
                android:textColor="#c38c56"
                android:textSize="16sp"
                android:text="会员验证:"/>
        <Button
                android:id="@+id/button_scan3"
                android:layout_below="@+id/prpmptmebere1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="16dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="#cccccc"/>

        <TextView
                android:id="@+id/prpmptmebere2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_below="@+id/button_scan3"
                android:textColor="#333333"
                android:layout_marginLeft="15dip"
                android:textSize="13sp"
                android:text="亲爱的用户，检测到您的免税账户下有可用的优惠券，红包，经过安全验证后即可直接使用."/>
    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/toolbarmeber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_below="@+id/toolbarmeber1"
            android:layout_alignParentLeft="true">
        <TextView
                    android:id="@+id/memeberaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dip"
                    android:text=""/>

        <ImageView
                android:id="@+id/button_success_icon"
                android:layout_below="@+id/memeberaccount"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:visibility="gone"
                android:src="@drawable/successicon_check"/>
        <TextView
                android:id="@+id/button_success_txt"
                android:layout_below="@+id/textview_title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dip"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@+id/button_success_icon"
                android:text="验证成功"
                android:visibility="gone"
                android:textSize="18sp"
                android:layout_marginRight="15dip"
                android:textColor="#5fcc29"/>

        <LinearLayout
                android:id="@+id/toolbar119"
                android:layout_below="@+id/memeberaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="#ffffff">
            <EditText
                    android:id="@+id/member_input_code"
                    android:layout_height="45dip"
                    android:layout_width="200dip"
                    android:scrollHorizontally="false"
                    android:gravity="fill_horizontal"
                    android:layout_below="@+id/memeberaccount"
                    android:layout_weight="1"
                    android:hint=" 请输入验证码"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            <Button
                    android:id="@+id/button_get_code"
                    android:layout_height="45dip"
                    android:layout_below="@+id/textview_title7"
                    android:layout_width="110dip"
                    android:layout_toRightOf="@+id/member_input_code"
                    android:background="@drawable/timer_selector"
                    android:text="获取验证码"
                    android:textSize="17sp"
                    android:textColor="@drawable/timer_font_selector"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="5dip"/>
        </LinearLayout>
        <Button
                android:id="@+id/button_code_check"
                android:layout_height="45dip"
                android:layout_below="@+id/toolbar119"
                android:layout_width="match_parent"
                android:layout_marginTop="20dip"
                android:background="@drawable/checkcode_selector"
                android:text="验 证"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dip"
                android:layout_marginBottom="8dip"
                android:layout_marginRight="15dip"/>

    </RelativeLayout>
</RelativeLayout>