<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2" >
<include 
    android:id="@+id/top"
    layout="@layout/search_scan"/>
<LinearLayout 
    android:layout_below="@+id/top"
    android:layout_marginTop="1dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
<fragment 
    android:id="@+id/brand_title_fragment"
    android:name="com.hhyg.TyClosing.fragment.BrandTitleFragment"
    android:layout_height="match_parent"
    android:layout_width="60dip"
    />
<FrameLayout 
    android:id="@+id/brand_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    >
 <fragment 
        android:id="@+id/brand_img_fragment"
        android:name="com.hhyg.TyClosing.fragment.BrandImgFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"	
        />
</FrameLayout>       
</LinearLayout>
<ImageView 
			android:id="@+id/infoOperating" 				
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_centerInParent="true"
			android:src="@drawable/progress" 
			android:visibility="gone"
			android:scaleType="center"/> 
</RelativeLayout>
