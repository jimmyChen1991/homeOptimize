<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="195dp"
    android:layout_height="244dp"
    android:paddingTop="@dimen/dp_15">
    <RelativeLayout
        android:id="@+id/img_wrap"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/jiaobiao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/ffffff"
            android:background="@drawable/jiaobiao_bg"/>
        <TextView
            android:id="@+id/promotion"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/promotion"
            android:background="@drawable/shape_promotion"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_wrap"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxEms="16"
        android:maxLines="1"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:textColor="@color/light"/>
    <TextView
        android:id="@+id/attr_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/light"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attr_info"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/cheap_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/cheap_price"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/price"/>
    </LinearLayout>
</RelativeLayout>