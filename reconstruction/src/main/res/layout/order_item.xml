<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s"
            android:layout_centerHorizontal="true"
            />

    <RelativeLayout
            android:id="@+id/left_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_layout"
            android:background="@drawable/list_m"
            >

        <RelativeLayout
                android:id="@+id/top"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                >

            <TextView
                    android:id="@+id/orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dip"
                    android:layout_centerVertical="true"
                    android:textColor="#C38C56"
                    android:textSize="@dimen/normalword"
                    />

            <ImageView
                    android:id="@+id/orderlistitemsplit0"
                    android:layout_width="698dip"
                    android:layout_centerHorizontal="true"
                    android:layout_height="1dip"
                    android:background="#e5e5e5"
                    android:layout_alignParentBottom="true"
                    />

            <Button android:id="@+id/confirm_btn"
                    android:layout_width="60dip"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:textSize="15sp"
                    android:text="已完成"
                    android:textColor="#C38C56"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    />

        </RelativeLayout>
        <LinearLayout
                android:id="@+id/imggroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/top"
                android:layout_marginTop="12.5dip"
                android:layout_marginBottom="2dip"
                >
        </LinearLayout>
        <TextView
                android:id="@+id/orderprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:layout_below="@+id/imggroup"
                android:textSize="15sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>

    <ImageView
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/l"
            android:layout_below="@+id/left_right"
            />


</RelativeLayout>
