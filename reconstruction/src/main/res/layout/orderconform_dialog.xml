<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="10dp">
        <RelativeLayout
                android:id="@+id/titlelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbarheight"
                android:background="#ffffff">
            <TextView
                    android:id="@+id/title"
                    android:layout_marginTop="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#C38C56"
                    android:textSize="20sp"
                    android:text="提货信息确认"/>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/titlelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/titlelayout"
                android:background="#fff">

            <TextView
                    android:id="@+id/msg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#515151"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="7dp"
                    android:text="3434243243242432"
                    />

            <TextView
                    android:id="@+id/msg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#515151"
                    android:textSize="16dp"
                    android:lineSpacingExtra="7dp"
                    android:text="111111111111111"
                    />

        </LinearLayout>
        <RelativeLayout
                android:id="@+id/titlelayout2"
                android:layout_width="match_parent"
                android:layout_below="@+id/titlelayout1"
                android:layout_height="@dimen/topbarheight"
                android:layout_marginLeft="20dp"
                android:background="#ffffff">
            <TextView
                    android:id="@+id/msg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#515151"
                    android:textSize="15dp"
                    android:lineSpacingExtra="7dp"
                    android:text="333333333333"/>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dip"
                android:layout_below="@+id/titlelayout2"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="190dip"
                    android:layout_height="50dip"
                    android:text="返回修改"
                    android:textColor="#d1ae8b"
                    android:textSize="18sp"
                    android:background="@drawable/success_button"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"/>
            <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="190dip"
                    android:layout_height="50dip"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="@drawable/button_corner"
                    android:layout_toRightOf="@+id/confirm_btn"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@+id/msg"
                    android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

