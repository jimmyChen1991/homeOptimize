<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="#f2f2f2"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbarheight"
            android:layout_alignParentTop="true"
            android:background="@drawable/topshdowbar">

        <ImageButton
                android:id="@+id/button_scan1"
                android:layout_width ="wrap_content"
                android:layout_height ="wrap_content"
                android:background="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip" />

        <TextView
                android:id="@+id/textview_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="微信支付"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:textSize="21sp" />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/toolbar2"
            android:layout_width="400dip"
            android:layout_height="500dip"
            android:layout_marginTop="70dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar1"
            android:background="@drawable/topbar">

        <ImageButton
                android:id="@+id/button_OK"
                android:layout_width ="wrap_content"
                android:layout_height ="wrap_content"
                android:background="@drawable/pay_weixin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dip" />
        <TextView
                android:id="@+id/textview_title_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_below="@+id/button_OK"
                android:layout_centerHorizontal="true"
                android:text="用微信扫描一下二维码支付"
                android:textColor="#303030"
                android:textSize="21sp" />
        <TextView
                android:id="@+id/orderinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textview_title_success"
                android:text="订单编号:675765676 支付金额:6350.00"
                android:textColor="#989898"
                android:textSize="21sp" />

        <ImageView
                android:id="@+id/buttoncode"
                android:layout_width ="200dip"
                android:layout_height ="200dip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/orderinfo"
                android:layout_marginTop="15dip" />
        <TextView
                android:id="@+id/order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/buttoncode"
                android:text="打开&quot;微信&quot;- &quot;发现 &quot;- &quot;扫一扫 &quot;"
                android:textColor="#989898"
                android:textSize="21sp" />
        <TextView
                android:id="@+id/ordermoeny"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:text="1122"
                android:gravity="center"
                android:background="#c28d56"
                android:textColor="#ffffff"
                android:textSize="21sp" />
    </RelativeLayout>


</RelativeLayout>