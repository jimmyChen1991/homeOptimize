<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2" >
    <RelativeLayout
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbarheight"
            android:layout_alignParentTop="true"
            android:background="@drawable/topbar">
        <ImageButton
                android:id="@+id/button_scan1"
                android:layout_width ="wrap_content"
                android:layout_height ="wrap_content"
                android:background="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip" />
        <TextView
                android:id="@+id/textview_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="支付失败"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:textSize="21sp" />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar1"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
        <ImageView
                android:id="@+id/button_error"
                android:layout_width ="wrap_content"
                android:layout_height ="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@drawable/big_x"
                android:layout_marginTop="25dip"                 android:layout_centerHorizontal="true"
/>
        <TextView
                android:id="@+id/textview_title_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_error"
                android:layout_marginTop="30dip"
                android:text="您的订单超过45分钟未支付,已自动取消"
                android:layout_centerHorizontal="true"
                android:textColor="#9a9a9a"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:layout_alignLeft="@+id/textview_title_success"
                android:layout_below="@+id/textview_title_success"
                android:layout_centerHorizontal="true"
                android:text="订单编号:675765676"
                android:textColor="#9a9a9a"
                android:textSize="18sp" />
        <LinearLayout
                android:id="@+id/toolbar4"
                android:layout_width="match_parent"
                android:layout_marginTop="80dip"
                android:layout_height="70dip"
                android:layout_below="@+id/order_info"

                >
            <Button
                    android:id="@+id/button_goon"
                    android:layout_height ="50dip"
                    android:layout_width="120dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dip"
                    android:background="@drawable/success_button"
                    android:text = "继续购物"
                    android:textColor="#C38C56"
                    android:textSize="21sp"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="20dip"/>
            <Button
                    android:id="@+id/button_seeorder"
                    android:layout_height ="50dip"
                    android:layout_width="120dp"
                    android:layout_marginBottom="20dip"
                    android:layout_weight="1"
                    android:text = "查看订单"
                    android:background="#c28d56"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dip"
                    android:textSize="21sp"

                    android:layout_marginRight="50dip"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>