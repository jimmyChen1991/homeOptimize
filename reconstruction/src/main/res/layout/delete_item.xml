<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
 <ImageView 
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s" 
        android:layout_centerHorizontal="true"    
        />
   <RelativeLayout 
        android:id="@+id/left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:background="@drawable/list_m" 
       >
	<RelativeLayout 
	    android:id="@+id/imglayout"
	    android:layout_width="wrap_content"
	    android:layout_height="100dip"
	    android:layout_marginTop="12.5dip"  
	    >
		<ImageView 
		    android:id="@+id/img"
		    android:layout_width="100dip"
		    android:layout_height="100dip"
			android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="17dip"
		    android:background="#f2f2f2"
	    />
	   	<ImageView 
		    android:id="@+id/youshui"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/img"
		    android:layout_alignLeft="@+id/img"
		    android:layout_alignRight="@+id/img"
	    /> 
	</RelativeLayout>
		<ImageView 
	    	android:id="@+id/item_divider_height"
	    	android:layout_width="698dip"
	    	android:layout_height="12.5dip"
	    	android:layout_below="@+id/imglayout"
	    	android:layout_centerHorizontal="true"
	    	android:background="#ffffff"
	    />   
 		  <TextView 
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dip"
        android:layout_toRightOf="@+id/imglayout"
        android:layout_marginLeft="15dip"
        android:textSize="15sp"
        android:textColor="#333333"   
        />
    <TextView 
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brand"
        android:layout_marginTop="2dip"
        android:textColor="#333333"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/brand"      
        />
    <TextView 
        android:id="@+id/selectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="2dip"
        android:textSize="15sp"
        android:textColor="#999999"    
        />
    
     <TextView 
        android:id="@+id/cxjPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/readd_shop"
        android:layout_marginRight="95dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dip"
        android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/msjPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cxjPrice"
        android:layout_marginTop="2dip"
        android:textSize="15sp"
        android:textColor="#666666"
        android:layout_alignLeft="@+id/cxjPrice"
        />
    <ImageButton 
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip"
        android:background="@drawable/shoppingcar_delete"
        />
    <ImageButton 
        android:id="@+id/readd_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/delete"
        android:layout_toLeftOf="@+id/delete"
        android:layout_marginRight="40dip"
        android:background="@drawable/readd_shop_indelete"
        />
     </RelativeLayout>
	 <ImageView 
	     android:id="@+id/bottomlayout"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_centerHorizontal="true"
	     android:background="@drawable/l"
	     android:layout_below="@+id/left_right"  
	     />
</RelativeLayout>